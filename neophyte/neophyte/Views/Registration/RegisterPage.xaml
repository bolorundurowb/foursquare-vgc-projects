<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
    x:Class="neophyte.Views.Registration.RegisterPage"
    Padding="10">
    <ContentPage.Content>
        <ScrollView
            x:Name="scrollView">
            <StackLayout
                Orientation="Vertical"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
                <Label
                    TextColor="Red"
                    HorizontalTextAlignment="Center"
                    Text="Please, be informed that your data would be made available to the government should there arise a need for contact tracing. Thank you"
                    Margin="0, 10, 0, 0" />

                <controls:CheckBox
                    Margin="0, 10, 0, 0"
                    IsChecked="{Binding ReturnedInLastTenDays, Mode=TwoWay}"
                    Type="Material"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Text="Did you return from a trip overseas in the last 10 days?"
                    CheckChanged="EvaluateValidity"/>

                <controls:CheckBox
                    Margin="0, 10, 0, 0"
                    IsChecked="{Binding LiveWithCovidCaregivers, Mode=TwoWay}"
                    Type="Material"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Text="Do you live with Covid-19 caregivers / health workers?"
                    CheckChanged="EvaluateValidity"/>

                <controls:CheckBox
                    Margin="0, 10, 0, 0"
                    IsChecked="{Binding CaredForSickPerson, Mode=TwoWay}"
                    Type="Material"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Text="Did you recently care for any sick individual at home or in hospital?"
                    CheckChanged="EvaluateValidity"/>

                <Label
                    Text="Do you presently have cold, cough, fever, sore throat, loss of smell or loss of appetite?:"
                    Margin="0, 15, 0, 0" />

                <controls:RadioButtonGroupView
                    SelectedItem="{Binding HaveCovidSymptoms, Mode=TwoWay}"
                    Orientation="Horizontal"
                    Margin="0, 10, 0, 0"
                    SelectedItemChanged="EvaluateValidity">
                    <controls:RadioButton
                        TextFontSize="14"
                        CircleColor="#92278F"
                        Color="#92278F"
                        Text="Yes"
                        Value="Yes" />
                    <controls:RadioButton
                        TextFontSize="14"
                        CircleColor="#92278F"
                        Color="#92278F"
                        Text="No"
                        Value="No" />
                    <controls:RadioButton
                        TextFontSize="14"
                        CircleColor="#92278F"
                        Color="#92278F"
                        Text="Maybe"
                        Value="Maybe" />
                </controls:RadioButtonGroupView>

                <Label
                    Text="Full Name:"
                    Margin="0, 10, 0, 0" />
                <Entry
                    Text="{Binding FullName, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Keyboard="Text" />

                <Label
                    Text="Email:"
                    Margin="0, 10, 0, 0" />
                <Entry
                    Text="{Binding EmailAddress, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Keyboard="Email" />

                <Label
                    Text="Age (in years):"
                    Margin="0, 10, 0, 0" />
                <Entry
                    Text="{Binding Age, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Keyboard="Numeric" />

                <Label
                    Text="Gender:"
                    Margin="0, 10, 0, 0" />
                <Picker
                    x:Name="cmbGender"
                    SelectedItem="{Binding Gender, Mode=TwoWay}"
                    Title="Select"
                    HeightRequest="40"
                    HorizontalOptions="FillAndExpand" />

                <Label
                    Text="Phone Number:"
                    Margin="0, 10, 0, 0" />
                <Entry
                    Text="{Binding Phone, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Keyboard="Telephone" />

                <Label
                    Text="Residential Address:"
                    Margin="0, 10, 0, 0" />
                <Editor
                    Text="{Binding ResidentialAddress, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    HeightRequest="100"
                    Keyboard="Text"
                    IsSpellCheckEnabled="True"
                    IsTextPredictionEnabled="True" />

                <Label
                    Text="Seat Number:"
                    Margin="0, 10, 0, 0" />
                <Entry
                    Text="{Binding SeatNumber, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    HeightRequest="40"
                    Keyboard="Numeric" />

                <Button x:Name="btnSave"
                        Text="Register"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        TextColor="White"
                        BackgroundColor="#92278F"
                        Margin="0, 15, 0, 0"
                        WidthRequest="100"
                        CornerRadius="22"
                        Clicked="Register" />

                <ActivityIndicator
                    x:Name="prgSaving"
                    HeightRequest="45"
                    WidthRequest="45"
                    Color="#92278F"
                    HorizontalOptions="Center"
                    Margin="0, 15, 0, 10"
                    IsVisible="False"
                    IsRunning="True" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
